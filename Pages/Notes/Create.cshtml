@page
@model notes.Pages.Notes.CreateModel
@{
    ViewData["Title"] = "Create Note";
}

<link rel="stylesheet" href="~/css/create.css" />

<div class="notes-container">
    <div class="notes-header">
        <h1 class="notes-title">Create Note</h1>
        <a asp-page="Index" class="btn-new-note" style="background: #8e8e93;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to Notes
        </a>
    </div>

    <div class="create-form-container">
        <div class="note-card" style="max-width: 600px; margin: 0 auto;">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                
                <div class="form-group">
                    <label asp-for="Note.Title" class="form-label">
                        <span class="required-indicator">*</span>
                        Title
                    </label>
                    <input asp-for="Note.Title" class="form-input" placeholder="Enter note title..." />
                    <span asp-validation-for="Note.Title" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Note.Content" class="form-label">
                        <span class="required-indicator">*</span>
                        Content
                    </label>
                    <textarea asp-for="Note.Content" class="form-textarea" rows="8" placeholder="Write your note here..."></textarea>
                    <span asp-validation-for="Note.Content" class="validation-error"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16z"/>
                        </svg>
                        Create Note
                    </button>
                    <a asp-page="Index" class="btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
.create-form-container {
    margin-top: 24px;
}

.form-group {
    margin-bottom: 24px;
}

.form-label {
    display: block;
    font-size: 16px;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 8px;
    line-height: 1.4;
}

.required-indicator {
    color: #ff3b30;
    margin-right: 4px;
}

.form-input,
.form-textarea {
    width: 100%;
    padding: 16px;
    border: 1px solid #e5e5e7;
    border-radius: 12px;
    font-size: 16px;
    font-family: inherit;
    line-height: 1.4;
    background: #fafafa;

}

.form-input:focus,
.form-textarea:focus {
    outline: none;
    border-color: #007aff;
    background: white;
    box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
}

.form-textarea {
    resize: vertical;
    min-height: 120px;
}

.form-actions {
    display: flex;
    gap: 12px;
    margin-top: 32px;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: #007aff;
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    text-decoration: none;
    box-shadow: 0 2px 8px rgba(0, 122, 255, 0.25);
    transition: all 0.2s ease;
}

.btn-primary:hover {
    background: #0056b3;
    box-shadow: 0 4px 12px rgba(0, 122, 255, 0.3);

}

.btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 16px 32px;
    background: #f5f5f7;
    color: #1d1d1f;
    border: none;
    border-radius: 12px;
    font-weight: 500;
    font-size: 16px;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s ease;
}

.btn-secondary:hover {
    background: #e5e5e7;
    color: #1d1d1f;
    text-decoration: none;
}

.validation-summary {
    background: #fff2f2;
    border: 1px solid #ffb3b3;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 24px;
    color: #d32f2f;
}

.validation-error {
    display: block;
    color: #ff3b30;
    font-size: 14px;
    margin-top: 4px;
    font-weight: 500;
}

@@media (max-width: 768px) {
    .form-actions {
        flex-direction: column;
    }
    
    .btn-primary,
    .btn-secondary {
        width: 100%;
        justify-content: center;
    }
    
    .notes-header {
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
    }
    
    .notes-title {
        font-size: 36px;
    }
}
</style>