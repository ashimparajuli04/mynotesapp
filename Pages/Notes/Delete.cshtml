@page
@model notes.Pages.Notes.DeleteModel
@{
    ViewData["Title"] = "Delete Note";
}

<link rel="stylesheet" href="~/css/delete.css" />

<div class="notes-container">
    <div class="notes-header">
        <h1 class="notes-title">Delete Note</h1>
        <a asp-page="./Index" class="btn-new-note" style="background: #8e8e93;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to Notes
        </a>
    </div>

    <div class="delete-form-container">
        <div class="note-card" style="max-width: 600px; margin: 0 auto;">
            <div class="delete-warning">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="color: #ff3b30; margin-bottom: 16px;">
                    <path d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"/>
                </svg>
                <h3 class="delete-title">Are you sure you want to delete this note?</h3>
                <p class="delete-subtitle">This action cannot be undone.</p>
            </div>

            <div class="note-preview">
                <div class="preview-field">
                    <label class="preview-label">Title</label>
                    <div class="preview-content">@Html.DisplayFor(model => model.Note.Title)</div>
                </div>
                <div class="preview-field">
                    <label class="preview-label">Content</label>
                    <div class="preview-content">@Html.DisplayFor(model => model.Note.Content)</div>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Note.Id" />
                <div class="form-actions">
                    <button type="submit" class="btn-danger">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3,6 5,6 21,6"/>
                            <path d="M19,6v14a2,2,0,0,1-2,2H7a2,2,0,0,1-2-2V6m3,0V4a2,2,0,0,1,2-2h4a2,2,0,0,1,2,2V6"/>
                        </svg>
                        Delete Note
                    </button>
                    <a asp-page="./Index" class="btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.delete-form-container {
    margin-top: 24px;
}

.delete-warning {
    text-align: center;
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 1px solid #e5e5e7;
}

.delete-title {
    font-size: 20px;
    font-weight: 600;
    color: #1d1d1f;
    margin: 0 0 8px 0;
    line-height: 1.2;
}

.delete-subtitle {
    font-size: 16px;
    color: #666;
    margin: 0;
    line-height: 1.4;
}

.note-preview {
    margin-bottom: 32px;
}

.preview-field {
    margin-bottom: 20px;
}

.preview-field:last-child {
    margin-bottom: 0;
}

.preview-label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: #86868b;
    margin-bottom: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.preview-content {
    font-size: 16px;
    color: #1d1d1f;
    line-height: 1.4;
    background: #f5f5f7;
    padding: 12px 16px;
    border-radius: 8px;
    border: 1px solid #e5e5e7;
}

.form-actions {
    display: flex;
    gap: 12px;
    margin-top: 32px;
}

.btn-danger {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: #ff3b30;
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    text-decoration: none;
    box-shadow: 0 2px 8px rgba(255, 59, 48, 0.25);
}

.btn-danger:hover {
    background: #d32f2f;
    box-shadow: 0 4px 12px rgba(255, 59, 48, 0.3);
}

.btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 16px 32px;
    background: #f5f5f7;
    color: #1d1d1f;
    border: none;
    border-radius: 12px;
    font-weight: 500;
    font-size: 16px;
    cursor: pointer;
    text-decoration: none;
}

.btn-secondary:hover {
    background: #e5e5e7;
    color: #1d1d1f;
    text-decoration: none;
}

@@media (max-width: 768px) {
    .form-actions {
        flex-direction: column;
    }
    
    .btn-danger,
    .btn-secondary {
        width: 100%;
        justify-content: center;
    }
    
    .notes-header {
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
    }
    
    .notes-title {
        font-size: 36px;
    }
}
</style>